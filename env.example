# Optional: set these only if you want env-based overrides.
# Otherwise configure credentials in-app from the First-Run Setup panel.
X_API_KEY=
X_API_SECRET=

# App-only bearer token (topic discovery + usage)
X_BEARER_TOKEN=

# Callback base URL
NEXT_PUBLIC_APP_URL=http://localhost:3999

# Optional overrides
X_API_BASE_URL=https://api.x.com
X_UPLOAD_API_BASE_URL=https://upload.twitter.com

# Scheduler behavior (in-app scheduler starts automatically by default)
SCHEDULER_INTERVAL_SECONDS=60
DISABLE_IN_APP_SCHEDULER=false

# Optional readiness policy (default: 1 connected account is enough)
REQUIRED_X_CONNECTED_SLOTS=1

# API auth + session hardening
X_MANAGER_REQUIRE_AUTH=true
X_MANAGER_ADMIN_TOKEN=
X_MANAGER_SESSION_SECRET=
X_MANAGER_SESSION_TTL_SECONDS=43200

# Encryption for stored API/account credentials (base64/hex/plain passphrase accepted)
X_MANAGER_ENCRYPTION_KEY=

# Boot hardening: fail startup in production when critical security checks fail
X_MANAGER_STRICT_BOOT=true

# Optional AI generation support (for Add Context panel)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Optional Giphy picker
NEXT_PUBLIC_GIPHY_API_KEY=

# Optional OpenClaw bridge token (required for /api/bridge/openclaw/post)
OPENCLAW_BRIDGE_TOKEN=
# Optional HMAC signing secret for bridge payload integrity/replay protection.
# If set, signature is required by default unless OPENCLAW_BRIDGE_REQUIRE_SIGNATURE=false.
OPENCLAW_BRIDGE_SIGNING_SECRET=
# Require HMAC signatures on bridge requests.
OPENCLAW_BRIDGE_REQUIRE_SIGNATURE=true
# Restrict bridge posting to these slots (default secure posture: slot 1 only).
OPENCLAW_BRIDGE_ALLOWED_SLOTS=1
# Simple per-client request cap for bridge endpoint.
OPENCLAW_BRIDGE_RATE_LIMIT_PER_MIN=20
# Maximum allowed request timestamp drift for signed requests.
OPENCLAW_BRIDGE_MAX_CLOCK_SKEW_SECONDS=300
# Optional remote media host allowlist (comma-separated). Leave empty to allow all public hosts.
OPENCLAW_BRIDGE_MEDIA_HOST_ALLOWLIST=swarmsignal.net
# Timeout for remote media fetches in milliseconds.
OPENCLAW_BRIDGE_MEDIA_FETCH_TIMEOUT_MS=12000
