{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/**/*.ts",
    ".next/types/**/*.ts",
    "build/.next/types/**/*.ts",
    "build-output/.next/types/**/*.ts",
    "build-next/.next/types/**/*.ts",
    "/tmp/x-manager-next/types/**/*.ts",
    "/var/folders/jm/wbwsknj51g5fhcpk4_2fw7xm0000gn/T/x-manager-next/types/**/*.ts",
    "/tmp/x-manager-next-dev/types/**/*.ts",
    ".next-local/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".next.*"
  ]
}
